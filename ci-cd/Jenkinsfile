pipeline {
    agent { label 'ec2' }

    environment {
        DOCKER_REGISTRY = 'docker.io/sillysavant161'
        IMAGE_NAME = 'f1nance'
        CLIENT_IMAGE = "${DOCKER_REGISTRY}/${IMAGE_NAME}-client"
        SERVER_IMAGE = "${DOCKER_REGISTRY}/${IMAGE_NAME}-server"
        JIRA_ISSUE = 'CPS-1'
        GITHUB_REPO = 'silly-savant/f1nance'
        GITHUB_CREDENTIALS = 'github_token'
    }

    stages {

        stage('Notify Build Start') {
            steps {
                script {
                    githubNotify(credentialsId: "${GITHUB_CREDENTIALS}", repo: "${GITHUB_REPO}", context: 'Build', status: 'PENDING', description: "Build started on branch ${env.BRANCH_NAME}")
                    slackSend(channel: '#team2-ci-cd', color: '#439FE0',
                              message: "üöÄ *Build #${env.BUILD_NUMBER}* for *${env.JOB_NAME}* started on branch *${env.GIT_BRANCH ?: 'unknown'}*")
                    jiraComment(issueKey: "${JIRA_ISSUE}", body: "Build #${env.BUILD_NUMBER} started for ${env.JOB_NAME}")
                }
            }
        }

        stage('Checkout') {
            steps { checkout scm }
        }

        stage('Build and Push Images') {
            steps {
                script {
                    githubNotify(credentialsId: "${GITHUB_CREDENTIALS}", repo: "${GITHUB_REPO}", context: 'Docker Build', status: 'PENDING', description: 'Building Docker images')
                    withCredentials([usernamePassword(
                        credentialsId: 'dockerhub',
                        usernameVariable: 'DOCKER_USER',
                        passwordVariable: 'DOCKER_PASS'
                    )]) {
                        sh '''
                            echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin

                            docker build -t ${CLIENT_IMAGE}:${BUILD_NUMBER} -f ci-cd/client.Dockerfile .
                            docker push ${CLIENT_IMAGE}:${BUILD_NUMBER}
                            docker tag ${CLIENT_IMAGE}:${BUILD_NUMBER} ${CLIENT_IMAGE}:latest
                            docker push ${CLIENT_IMAGE}:latest

                            docker build -t ${SERVER_IMAGE}:${BUILD_NUMBER} -f ci-cd/server.Dockerfile .
                            docker push ${SERVER_IMAGE}:${BUILD_NUMBER}
                            docker tag ${SERVER_IMAGE}:${BUILD_NUMBER} ${SERVER_IMAGE}:latest
                            docker push ${SERVER_IMAGE}:latest
                        '''
                    }
                    githubNotify(credentialsId: "${GITHUB_CREDENTIALS}", repo: "${GITHUB_REPO}", context: 'Docker Build', status: 'SUCCESS', description: 'Images built and pushed')
                }
            }
        }

        stage('Run Tests') {
            parallel {
                stage('Client Tests') {
                    steps {
                        script {
                            githubNotify(credentialsId: "${GITHUB_CREDENTIALS}", repo: "${GITHUB_REPO}", context: 'Client Tests', status: 'PENDING', description: 'Running client tests')
                            def clientContainer = docker.image("${CLIENT_IMAGE}:${BUILD_NUMBER}")
                                .run("--rm -d -p 3100:3000")
                            sleep 10
                            try {
                                sh "curl -f http://localhost:3100 || exit 1"
                                sh "docker stop ${clientContainer.id} || true"
                                githubNotify(credentialsId: "${GITHUB_CREDENTIALS}", repo: "${GITHUB_REPO}", context: 'Client Tests', status: 'SUCCESS', description: 'Client passed tests')
                            } catch (err) {
                                githubNotify(credentialsId: "${GITHUB_CREDENTIALS}", repo: "${GITHUB_REPO}", context: 'Client Tests', status: 'FAILURE', description: 'Client failed tests')
                                error "Client test failed"
                            }
                        }
                    }
                }

                stage('Server Tests') {
                    steps {
                        script {
                            githubNotify(credentialsId: "${GITHUB_CREDENTIALS}", repo: "${GITHUB_REPO}", context: 'Server Tests', status: 'PENDING', description: 'Running server tests')
                            def serverContainer = docker.image("${SERVER_IMAGE}:${BUILD_NUMBER}")
                                .run("--rm -d --name server-test -p 8100:8000")
                            sleep 15
                            try {
                                sh "docker exec server-test curl -f http://localhost:8000/ || (docker logs server-test && exit 1)"
                                githubNotify(credentialsId: "${GITHUB_CREDENTIALS}", repo: "${GITHUB_REPO}", context: 'Server Tests', status: 'SUCCESS', description: 'Server passed tests')
                            } catch (err) {
                                githubNotify(credentialsId: "${GITHUB_CREDENTIALS}", repo: "${GITHUB_REPO}", context: 'Server Tests', status: 'FAILURE', description: 'Server failed tests')
                                error "Server test failed"
                            } finally {
                                sh "docker stop server-test || true"
                            }
                        }
                    }
                }
            }
        }

        stage('Deploy to Staging') {
            when { branch 'develop' }
            steps {
                script {
                    githubNotify(credentialsId: "${GITHUB_CREDENTIALS}", repo: "${GITHUB_REPO}", context: 'Staging Deploy', status: 'PENDING', description: 'Deploying to staging')
                    try {
                        sh '''
                            docker rm -f f1nance-client-staging f1nance-server-staging || true
                            sleep 3
                            docker run -d --name f1nance-client-staging -p 3000:3000 ${CLIENT_IMAGE}:${BUILD_NUMBER}
                            docker run -d --name f1nance-server-staging -p 8000:8000 ${SERVER_IMAGE}:${BUILD_NUMBER}
                        '''
                        slackSend(channel: '#team2-ci-cd', color: '#2eb886',
                                  message: "‚úÖ *Staging* deployment successful for build #${env.BUILD_NUMBER}")
                        jiraComment(issueKey: "${JIRA_ISSUE}", body: "Staging deployment succeeded for build #${env.BUILD_NUMBER}")
                        githubNotify(credentialsId: "${GITHUB_CREDENTIALS}", repo: "${GITHUB_REPO}", context: 'Staging Deploy', status: 'SUCCESS', description: 'Staging deployed')
                    } catch (err) {
                        slackSend(channel: '#team2-ci-cd', color: '#a30200',
                                  message: "‚ùå *Staging* deployment failed for build #${env.BUILD_NUMBER}")
                        jiraComment(issueKey: "${JIRA_ISSUE}", body: "Staging deployment failed for build #${env.BUILD_NUMBER}: ${err}")
                        githubNotify(credentialsId: "${GITHUB_CREDENTIALS}", repo: "${GITHUB_REPO}", context: 'Staging Deploy', status: 'FAILURE', description: 'Staging failed')
                        error "Staging deployment failed"
                    }
                }
            }
        }

        stage('Deploy to Production') {
            when { branch 'main' }
            steps {
                script {
                    githubNotify(credentialsId: "${GITHUB_CREDENTIALS}", repo: "${GITHUB_REPO}", context: 'Production Deploy', status: 'PENDING', description: 'Deploying to production')
                    try {
                        sh '''
                            docker rm -f f1nance-client-prod f1nance-server-prod || true
                            sleep 3
                            docker run -d --name f1nance-client-prod -p 3000:3000 ${CLIENT_IMAGE}:${BUILD_NUMBER}
                            docker run -d --name f1nance-server-prod -p 8000:8000 ${SERVER_IMAGE}:${BUILD_NUMBER}
                        '''
                        slackSend(channel: '#team2-ci-cd', color: '#2eb886',
                                  message: "üö¢ *Production* deployment successful for build #${env.BUILD_NUMBER}")
                        jiraComment(issueKey: "${JIRA_ISSUE}", body: "Production deployment succeeded for build #${env.BUILD_NUMBER}")
                        githubNotify(credentialsId: "${GITHUB_CREDENTIALS}", repo: "${GITHUB_REPO}", context: 'Production Deploy', status: 'SUCCESS', description: 'Production deployed')
                    } catch (err) {
                        slackSend(channel: '#team2-ci-cd', color: '#a30200',
                                  message: "üî• *Production* deployment failed for build #${env.BUILD_NUMBER}")
                        jiraComment(issueKey: "${JIRA_ISSUE}", body: "Production deployment failed for build #${env.BUILD_NUMBER}: ${err}")
                        githubNotify(credentialsId: "${GITHUB_CREDENTIALS}", repo: "${GITHUB_REPO}", context: 'Production Deploy', status: 'FAILURE', description: 'Production failed')
                        error "Production deployment failed"
                    }
                }
            }
        }
    }

    post {
        always {
            sh '''
                docker ps -aq | xargs -r docker stop
                docker container prune -f
                docker system prune -af --volumes || true
            '''
            cleanWs()
        }

        success {
            slackSend(channel: '#team2-ci-cd', color: '#36a64f',
                      message: "‚úÖ Pipeline succeeded for *${env.JOB_NAME}* build #${env.BUILD_NUMBER}")
            jiraComment(issueKey: "${JIRA_ISSUE}", body: "Build #${env.BUILD_NUMBER} succeeded for ${env.JOB_NAME}")
            githubNotify(credentialsId: "${GITHUB_CREDENTIALS}", repo: "${GITHUB_REPO}", context: 'Build', status: 'SUCCESS', description: 'Pipeline succeeded')
        }

        failure {
            slackSend(channel: '#team2-ci-cd', color: '#ff0000',
                      message: "‚ùå Pipeline failed for *${env.JOB_NAME}* build #${env.BUILD_NUMBER}")
            jiraComment(issueKey: "${JIRA_ISSUE}", body: "Build #${env.BUILD_NUMBER} failed for ${env.JOB_NAME}")
            githubNotify(credentialsId: "${GITHUB_CREDENTIALS}", repo: "${GITHUB_REPO}", context: 'Build', status: 'FAILURE', description: 'Pipeline failed')
        }
    }
}
