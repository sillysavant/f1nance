# ====================================================
# ðŸŒ» f1nance Application Environment Variables
# ====================================================
# Copy this file to .env and fill in your values for local development.
# For production, use your deployment platform's secret management.

# ====================================================
# App Metadata
# ====================================================
PROJECT_NAME=f1nance
API_V1_PREFIX=/api/v1
ENVIRONMENT=development
LOG_LEVEL=INFO

# ====================================================
# Server Configuration
# ====================================================
HOST=0.0.0.0
PORT=8000
RELOAD=true

# ====================================================
# Database (PostgreSQL)
# ====================================================
# Local development:
DB_USER=postgres
DB_PASSWORD=devpassword
DB_HOST=postgres
DB_PORT=5432
DB_NAME=f1nance

# For cloud deployments (Supabase, Neon, etc.), use:
# DB_HOST=your-db-host.supabase.co
# DB_USER=postgres
# DB_PASSWORD=your-secure-password
# DB_NAME=postgres
# DB_PORT=5432

# ====================================================
# Security & Authentication
# ====================================================
# Generate a secure JWT secret: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=change_this_to_a_secure_random_key_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_ALGORITHM=HS256

# ====================================================
# CORS & Frontend
# ====================================================
# Local: ["http://localhost", "http://localhost:3000"]
# Production: ["https://yourdomain.com", "https://app.yourdomain.com"]
ALLOWED_ORIGINS=["http://localhost", "http://localhost:3000", "http://localhost:8000"]
FRONTEND_URL=http://localhost:3000

# ====================================================
# Redis (Caching & Task Queue)
# ====================================================
# Local development:
REDIS_URL=redis://redis:6379/0

# Cloud (Upstash, Redis Cloud):
# REDIS_URL=rediss://:your-password@host:port
# Note: Use rediss:// for TLS connection

# ====================================================
# Email Configuration (Optional)
# ====================================================
ENABLE_EMAILS=false

# For local testing, disable ENABLE_EMAILS above.
# For production, configure SMTP or use a service like SendGrid.

EMAIL_FROM=noreply@f1nance.app
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
USE_TLS=true
EMAIL_VERIFY_TOKEN_EXPIRE_MINUTES=30

# ====================================================
# Optional: File Storage (S3-compatible)
# ====================================================
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_S3_BUCKET=your-bucket-name
# AWS_REGION=us-east-1
# S3_ENDPOINT_URL=https://s3.amazonaws.com  # or your provider
